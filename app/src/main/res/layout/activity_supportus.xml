<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03a9f4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/suportusback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/lg"/>

        <TextView
            android:id="@+id/suportusbackt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#11B7F3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="关于我们"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="15dp"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/bigicon"/>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="生日管家"
        android:textSize="25sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="版本：1.0"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="15dp"/>


    <View
        android:layout_width="0dp"
        android:layout_height="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="联系邮箱：154926287@qq.com"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="您的反馈是对我们最大的支持！"
        android:textSize="18sp"/>

</LinearLayout>
